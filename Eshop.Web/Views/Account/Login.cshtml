@model Eshop.Domain.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "ورود";
}
<div class="auth-container">
    <div class="auth-title mb-3">@ViewData["Title"]</div>
    <!-- start of auth-box -->
    <div class="auth-box ui-box">
        <!-- start of auth-form -->
        <form asp-action="Login" class="auth-form">
            <!-- start of form-element -->
            <div class="form-element-row mb-5">
                <input type="text" asp-for="Mobile" class="form-control" placeholder="شماره موبایل">
                <span asp-validation-for="Mobile"></span>
            </div>

            <div class="form-element-row mb-5">
                <input type="password" asp-for="Password" class="form-control" placeholder="کلمه عبور">
                <span asp-validation-for="Password"></span>
            </div>
            <!-- end of form-element -->
            <div class="form-element-row mb-3">
                <button class="btn btn-primary">ورود</button>
            </div>
        </form>
        <!-- end of auth-form -->
    </div>
    <!-- end of auth-box -->
</div>